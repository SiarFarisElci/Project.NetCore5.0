@model NewVM

@{
    ViewData["Title"] = "UpdateNew";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>UpdateNew</h1>

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyuru guncelleme</h4>

            <form class="forms-sample" method="post">
                @Html.HiddenFor(x=> x.New.ID)
                <div class="form-group">
                    <label for="exampleInputName1">Baslık</label>
                    <input type="text" asp-for="New.Title" class="form-control" id="exampleInputName1" placeholder="Baslık">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Acıklama</label>
                    <input type="text" asp-for="New.Description" class="form-control" id="exampleInputEmail3" placeholder="Gorsel">
                </div>



                <button type="submit" class="btn btn-primary me-2">Guncelle</button>
                <button class="btn btn-light">Vazgec</button>
            </form>
        </div>
    </div>
</div>