@model ContactVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Takım Arkadaşlarımızın Listesi</h4>

            <div class="table-responsive">

                @if (Model.Contacts.Count == 0)
                {
                    <div>
                        Henuz hicbir Contact eklenmemiş.. Contact eklenmek icin <a asp-action="AddContact" asp-controller="Contact"> Tıklayınız </a>
                    </div>

                }
                else
                {
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    AdSoyAd
                                </th>
                                <th>
                                    
                                </th>
                                <th>
                                    Mail
                                </th>
                                <th>
                                    Tarih
                                </th>
                                <th>
                                    Durum
                                </th>
                                <th>
                                    Mesajı Gor
                                </th>
                                <th colspan="2">  Islemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Contact item in Model.Contacts)
                            {


                                <tr>
                                   
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>
                                        @item.Mail
                                    </td>
                                    <td>
                                        @item.CreatedDate.ToShortDateString()
                                    </td>
                                    <td>
                                        @item.Status
                                    </td>
                                    <th><a asp-action="DetailContact" asp-controller="Contact" asp-route-id="@item.ID" class="btn btn-warning"> Detaylar </a></th>
                                    <th><a asp-action="UpdateContact" asp-controller="Contact" asp-route-id="@item.ID" class="btn btn-warning"> Guncelle </a></th>
                                    <th><a asp-action="DeleteContact" asp-controller="Contact" asp-route-id="@item.ID" class="btn btn-danger"> Sil </a></th>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <br>
                    <button class="btn btn-warning"> <a href="/Contact/AddContact"> Ekle </a> </button>
                }
               
            </div>
        </div>
    </div>
</div>
