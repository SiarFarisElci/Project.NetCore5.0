@model ImageVM

@{
    ViewData["Title"] = "AddImage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>AddImage</h1>


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni gorsel ekleme</h4>

            <form class="forms-sample" method="post">
                <div class="form-group">
                    <span asp-validation-for="Image.Title" class="text-danger"></span>
                    <label for="exampleInputName1">Baslık</label>
                    <input type="text" asp-for="Image.Title" class="form-control" id="exampleInputName1" placeholder="Baslık">
                </div>
                <div class="form-group">
                    <span asp-validation-for="Image.ImageUrl" class="text-danger"></span>

                    <label for="exampleInputEmail3">Image Url</label>
                    <input type="text" asp-for="Image.ImageUrl" class="form-control" id="exampleInputEmail3" placeholder="Gorsel yolu">
                </div>


                <div class="form-group">
                    <span asp-validation-for="Image.Description" class="text-danger"></span>

                    <label for="exampleTextarea1">Acıklama</label>
                    <textarea class="form-control" asp-for="Image.Description" id="exampleTextarea1" rows="4"></textarea>
                </div>
                <button type="submit" class="btn btn-primary me-2">Kaydet</button>
                <button class="btn btn-light">Vazgec</button>
            </form>
        </div>
    </div>
</div>